<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <%= form_for [@product, @review] do |f| %>
        <%= f.text_area :description %>
        <%= f.select :rating, [[5,5],[4,4],[3,3],[2,2],[1,1]] %>
            <%= submit_tag "Submit" %>
      <% end %>
    <% end %>

    <% i = 0 %>

    <% @product.reviews.each do |r| %>
      <div><strong>Rating:</strong> <%= @product.reviews[i].rating %></div>
      <div><strong>Review:</strong> <%= @product.reviews[i].description %></div>
      <% if current_user && if current_user.id == @product.reviews[i].user_id %>
          <div>delete</div>
        <% else %>
      <% end %>
      <% end %>
      <% i += 1 %>
    <% end %>

  </article>

</section>
